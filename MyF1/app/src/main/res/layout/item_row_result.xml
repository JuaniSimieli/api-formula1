<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageResultNat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textResultName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Max Verstappen"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageResultNat"
        app:layout_constraintTop_toTopOf="@+id/imageResultNat" />

    <TextView
        android:id="@+id/textResultTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Red Bull"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imageResultNat"
        app:layout_constraintTop_toBottomOf="@+id/textResultName" />

    <TextView
        android:id="@+id/textResultPos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:text="#"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageResultNat"
        app:layout_constraintEnd_toEndOf="@+id/imageResultNat"
        app:layout_constraintTop_toTopOf="@+id/imageResultNat" />

    <TextView
        android:id="@+id/textResultPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="25"
        app:layout_constraintBottom_toBottomOf="@+id/imageResultNat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageResultNat" />

    <TextView
        android:id="@+id/textResultTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:text="1:34:24.258"
        app:layout_constraintBottom_toBottomOf="@+id/textResultPoints"
        app:layout_constraintEnd_toEndOf="@+id/textResultPoints" />

    <ImageView
        android:id="@+id/imageResultFastLap"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/textResultTime"
        app:layout_constraintEnd_toStartOf="@+id/textResultTime"
        app:layout_constraintTop_toTopOf="@+id/textResultTime" />
</androidx.constraintlayout.widget.ConstraintLayout>